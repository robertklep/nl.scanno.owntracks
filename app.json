{
   "id": "nl.scanno.owntracks",
   "name": {
      "en": "Owntracks Client",
      "nl": "Owntracks Client"
   },
   "description": {
      "en": "Subscripe to Owntracks MQTT messages for presence detection",
      "nl": "Abonneer op MQTT berichten van Owntracks voor aanwezigheids detectie"
   },
   "version": "2.0.0",
   "sdk": 2,
   "compatibility": "1.x",
   "category": [
      "internet",
      "localization"
   ],
   "permissions": [
       "homey:manager:speech-input",
       "homey:manager:speech-output"
   ],
   "speech": {
      "en": {
         "element": {
            "actionWords": {
               "type": "regex",
               "value": "(where(\\sis)?|what(\\sis)?)"
             },
             "location": {
                "type": "regex",
                "value": "((the\\s)?location)"
             },
             "query": {
                "type": "regex",
                "value": "[\\s\\S]+"
             }
         },
         "group": {
            "main": {
               "set": "(actionWords) && location && query",
               "ordered": false,
               "allowDisconnect": true,
               "capturingGroup": true
            },
            "where_is": {
               "set": "actionWords && query",
               "ordered": false,
               "allowDisconnect": true,
               "capturingGroup": true
            }
         }
      },
      "nl": {
         "element": {
            "actionWords": {
               "type": "regex",
               "value": "(waar(\\sis)?|wat(\\sis)?)"
             },
             "location": {
                "type": "regex",
                "value": "((de\\s)?lokatie)"
             },
             "query": {
                "type": "regex",
                "value": "[\\s\\S]+"
             }
         },
         "group": {
            "main": {
               "set": "(actionWords) && location && query",
               "ordered": false,
               "allowDisconnect": true,
               "capturingGroup": true
            },
            "where_is": {
               "set": "actionWords && query",
               "ordered": false,
               "allowDisconnect": true,
               "capturingGroup": true
            }
         }
      }
   },
   "speechExamples": {
       "en": [ "What is the location of Menno?" ],
       "nl": [ "Wat is de lokatie van Menno?" ]
   },
   "author": {
      "name": "Menno van Grinsven",
      "email": "mgrinsven@gmail.com"
   },
   "contributors": {
      "developers": [
          {
             "name": "Menno van Grinsven",
             "email": "mgrinsven@gmail.com"
          }
      ]
   },
   "images": {
      "large":"./assets/images/large.png",
      "small":"./assets/images/small.png"
   },
   "flow": {
      "conditions": [
         {
            "id": "inGeofence",
            "title": {
               "en": "Someone !{{present|absend}} in",
               "nl": "Iemand !{{aanwezig|afwezig}} in"
            },
            "args": [
               {
                  "name": "geoFence",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Name of geoFence",
                     "nl": "Naam van de geoFence"
                  }
               }
            ]
         }
      ],
      "triggers": [
         {
            "id": "eventOwntracks_AC",
            "title": {
               "en": "Receive Geofence triggers",
               "nl": "Ontvang Geofence triggers"
            },
            "tokens": [
               {
                  "name": "event",
                  "title": {
                     "en": "Type of event (enter or leave)",
                     "nl": "Type gebeurtenis (enter / leave)"
                  }
               },
               {
                  "name": "user",
                  "title": {
                     "en": "User that enters/leaves geofence",
                     "nl": "Gebruiker welke de geofence binnenkomt of verlaat"
                  }
               },
               {
                  "name": "fence",
                  "title": {
                     "en": "Name of geofence",
                     "nl": "Naam van de geofence"
                  }
               },
               {
                  "name": "percBattery",
                  "type": "number",
                  "title": {
                     "en": "Current battery percentage",
                     "nl": "Huidige accu percentage"
                  }
               }
            ],
            "args":[
	       {
                 "name": "nameUser",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Username",
                     "nl": "Naam gebruiker"
                  }
               },
               {
                  "name": "nameGeofence",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Geofence name",
                     "nl": "Naam Geofence"
                  }
               }
            ]
         },
         {
            "id": "enterGeofence_AC",
            "title": {
               "en": "Enter Geofence trigger",
               "nl": "Geofence binnen gegaan trigger"
            },
            "tokens": [
               {
                  "name": "user",
                  "title": {
                     "en": "User that enters geofence",
                     "nl": "Gebruiker welke de geofence binnenkomt"
                  }
               },
               {
                  "name": "fence",
                  "title": {
                     "en": "Name of geofence",
                     "nl": "Naam van de geofence"
                  }
               },
               {
                  "name": "percBattery",
                  "type": "number",
                  "title": {
                     "en": "Current battery percentage",
                     "nl": "Huidige accu percentage"
                  }
               }
            ],
            "args":[
               {
                  "name": "nameUser",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Username",
                     "nl": "Naam gebruiker"
                  }
               },
               {
                  "name": "nameGeofence",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Geofence name",
                     "nl": "Naam Geofence"
                  }
               }
            ]
         },
         {
            "id": "leaveGeofence_AC",
            "title": {
               "en": "Leave Geofence trigger",
               "nl": "Geofence verlaten trigger"
            },
            "tokens": [
               {
                  "name": "user",
                  "title": {
                     "en": "User that enters geofence",
                     "nl": "Gebruiker welke de geofence binnenkomt"
                  }
               },
               {
                  "name": "fence",
                  "title": {
                     "en": "Name of geofence",
                     "nl": "Naam van de geofence"
                  }
               },
               {
                  "name": "percBattery",
                  "type": "number",
                  "title": {
                     "en": "Current battery percentage",
                     "nl": "Huidige accu percentage"
                  }
               }
            ],
            "args":[
               {
                  "name": "nameUser",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Username",
                     "nl": "Naam gebruiker"
                  }
               },
               {
                   "name": "nameGeofence",
                   "type": "autocomplete",
                   "placeholder": {
                      "en": "Geofence name",
                      "nl": "Naam Geofence"
                   }
               }
            ]
         },
         {
            "id": "eventBattery",
            "title": {
               "en": "Trigger when battery percentage is below a certain percentage",
               "nl": "Trigger wanneer accu percentage lager dan een bepaald percentage komt"
            },
            "tokens": [
               {
                  "name": "user",
                  "title": {
                     "en": "User of the phone",
                     "nl": "Gebruiker van de telefoon"
                  }
               },
               {
                  "name": "percBattery",
                  "type": "number",
                  "title": {
                     "en": "Current battery percentage",
                     "nl": "Huidige accu percentage"
                  }
               }
            ],
            "args":[
               {
                  "name": "nameUser",
                  "type": "autocomplete",
                  "placeholder": {
                     "en": "Username",
                     "nl": "Naam gebruiker"
                  }
               },
               {
                   "name": "percBattery",
                   "type": "number",
                   "placeholder": {
                      "en": "Battery percentage",
                      "nl": "Accu percentage"
                   }
               }
            ]
         }
      ],
      "actions": [
         {
            "id": "sayLocation",
            "title": {
               "en": "Tell the current location of a user",
               "nl": "Vertel de huidige locatie van een gebruiker"
             },
             "args":[
                {
                   "name": "user",
                   "type": "autocomplete",
                   "placeholder": {
                      "en": "User",
                      "nl": "Gebruiker"
                   }
                }
             ]
         },
         {
            "id": "publishOwntracks",
            "title": {
               "en": "Publish message",
               "nl": "Stuur bericht"
             },
             "args":[
                {
                   "name": "mqttMessage",
                   "type": "text",
                   "placeholder": {
                      "en": "Message",
                      "nl": "Bericht"
                    }
                },
                {
                   "name": "mqttTopic",
                   "type": "text",
                   "placeholder": {
                      "en": "Topic",
                      "nl": "Topic"
                   }
                }
             ]
          }
      ]
   }
}
